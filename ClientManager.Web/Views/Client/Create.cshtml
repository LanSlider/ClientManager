
@{
    ViewData["Title"] = "Create";
}

@using Data.Constants
@model Data.Entities.Client

<h2>Create Client</h2>

<div style="padding: 40px">
    <form method="post" action="~/Client/Create">
        <div style="padding: 5px">
            @Html.EditorFor(x => x.Name, new { htmlAttributes = new { placeholder = "Input name"}} )
        </div>
        <div style="padding: 5px">
            @Html.EditorFor(x => x.AvailableMoney, new { htmlAttributes = new { placeholder = "Input money" }})
        </div>
        <div style="padding: 5px">
            @Html.DropDownListFor(m => m.Gender, new SelectList(Enum.GetNames(typeof(GenderType))))
        </div>
        <div style="padding: 5px">
            <input type="submit" value="Send" />
        </div>
    </form>
</div>

