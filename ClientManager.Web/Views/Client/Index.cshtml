@{
    ViewData["Title"] = "Home Page";
}

@model ICollection<Data.Entities.Client>

    <div style="padding: 20px">
        <a href="/Client/Create"><button>Add client</button></a>
        <table style="width: 800px; margin-top: 30px">
            <tr>
                <td>Name</td>
                <td>AvailableMoney</td>
                <td>Gender</td>
                <td></td>
                <td></td>
            </tr>
            <tr><td colspan="6"><hr /></td></tr>
            @foreach (var client in Model)
            {
            <tr>
                <td>@client.Name</td>
                <td>@client.AvailableMoney</td>
                <td>@client.Gender</td>
                <td><a href="~/Client/Edit/@client.Id">Edit</a></td>
                <td><a href="~/Client/Delete/@client.Id">Delete</a></td>
            </tr>
            }
        </table>
    </div>
